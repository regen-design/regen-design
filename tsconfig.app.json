{
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./packages/*/node_modules",
    "./packages/*/_virtual"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "composite": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@regen-design": [
        "./packages/*"
      ]
    }
  }
}