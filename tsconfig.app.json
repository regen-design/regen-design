{
  "include": [
    "packages/**/*",
    "main.ts"
  ],
  "exclude": [
    "./node_modules",
    "./packages/*/node_modules",
    "./packages/*/_virtual",
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "composite": true,
    "jsx": "react-jsx",
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  }
}